                                <input asp-for="GraphicProccesorModel" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="GraphicProccesorModel" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="GraphicProccesorFerequency">فرکانس پردازنده گرافیکی</label>
                                <input asp-for="GraphicProccesorFerequency" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="GraphicProccesorFerequency" class="text-danger"></span>
                            </div>

                            <div class="form-group">
