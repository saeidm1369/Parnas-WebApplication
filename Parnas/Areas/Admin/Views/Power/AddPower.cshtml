@model Parnas.Domain.DTOs.Power.PoweAddDto
@{
    ViewData["Title"] = "افزودن منبع تغذیه";
}

<h2 style="margin:10px 40px 15px 0">افزودن منبع تغذیه</h2>

<div class="box box-warning container">
    <div class="row">
        <form asp-area="Admin" asp-controller="Power" asp-action="AddPower" method="post" enctype="multipart/form-data">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-6">
                        <div class="box-header with-border">
                            <h3 class="box-title">اطلاعات کلی</h3>
                        </div>

                        <div class="box-body">
                            <!-- Base Entity Inputs -->
                            <div class="form-group">
                                <label asp-for="Title">عنوان</label>
                                <input asp-for="Title" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Brand">برند</label>
                                <input asp-for="Brand" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price">قیمت</label>
                                <input asp-for="Price" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Color">رنگ</label>
                                <input asp-for="Color" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Dimensions">اندازه</label>
                                <input asp-for="Dimensions" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Dimensions" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Weight">وزن</label>
                                <input asp-for="Weight" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Type">نوع</label>
                                <input asp-for="Type" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Count">تعداد</label>
                                <input asp-for="Count" type="number" class="form-control" placeholder="">
                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>

                            <!-- select -->
                            <div class="form-group">
                                <label asp-for="CategoryId" for="CategoryId">انتخاب دسته بندی</label>
                                <select asp-for="CategoryId" name="CategoryId" class="form-control">
                                    <option value="1"> لوازم جانبی</option>
                                    <option value="2">سیستم های آماده</option>
                                    <option value="3">قطعات کامپیوتر</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="box-header with-border">
                            <h3 class="box-title">مشخصات منبع تغذیه</h3>
                        </div>

                        <div class="box-body">
                            <!-- Power Specific Inputs -->
                            <div class="form-group">
                                <label asp-for="PowerSupplyConnectionType">نوع اتصال منبع تغذیه</label>
                                <input asp-for="PowerSupplyConnectionType" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="PowerSupplyConnectionType" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NominalPower">توان نامی</label>
                                <input asp-for="NominalPower" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="NominalPower" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ATX3Standard">استاندارد ATX 3.0</label>
                                <select asp-for="ATX3Standard" class="form-control">
                                    <option value="true">دارد</option>
                                    <option value="false">ندارد</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="PowerSupplyFanLighting">نورپردازی فن منبع تغذیه</label>
                                <input asp-for="PowerSupplyFanLighting" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="PowerSupplyFanLighting" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PowerSupplyFanSize">اندازه فن منبع تغذیه</label>
                                <input asp-for="PowerSupplyFanSize" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="PowerSupplyFanSize" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Current33V">جریان +3.3 ولت</label>
                                <input asp-for="Current33V" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Current33V" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Plus5VCurrent">جریان +5 ولت</label>
                                <input asp-for="Plus5VCurrent" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Plus5VCurrent" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="First12Current">جریان اولین ریل +12 ولت</label>
                                <input asp-for="First12Current" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="First12Current" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="v12VoltCurrent">جریان 12 ولت</label>
                                <input asp-for="v12VoltCurrent" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="v12VoltCurrent" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Current5VSBV">جریان +5VSB (استندبای)</label>
                                <input asp-for="Current5VSBV" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Current5VSBV" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Pin24Connection">اتصال 24 پین</label>
                                <input asp-for="Pin24Connection" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Pin24Connection" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="P4P4PinConnection">اتصال 4+4 پین</label>
                                <input asp-for="P4P4PinConnection" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="P4P4PinConnection" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PinPcieConnection">اتصال 6+2 پین PCIe</label>
                                <input asp-for="PinPcieConnection" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="PinPcieConnection" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PinConnector">کانکتور 16 پین</label>
                                <input asp-for="PinConnector" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="PinConnector" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PinSataConnector">کانکتور 15 پین SATA</label>
                                <input asp-for="PinSataConnector" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="PinSataConnector" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="EighteenPlusCertificate">گواهینامه 80 پلاس</label>
                                <input asp-for="EighteenPlusCertificate" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="EighteenPlusCertificate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-5">
                <div class="container">
                    <div class="form-group">
                        <label asp-for="Description">توضیحات </label>
                        <textarea asp-for="Description" class="form-control" placeholder=""></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div style="margin-top: 15px">
                        <img id="main-image" src="" style="width:350px;height:350px; border-radius:10px; display: none;" />
                    </div>
                    <div class="container-fluid" style="margin-top: 15px" id="image-gallery"></div>
                </div>
                <div class="text-center" style="margin-top:15px">
                    <button type="button" class="btn btn-success" id="add-images-btn">افزودن تصاویر</button>
                    <input asp-for="Images" type="file" id="file-input" multiple accept="image/*" style="display: none;">
                    <input type="submit" class="btn btn-primary" value="ارسال">
                </div>
            </div>
        </form>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#add-images-btn').on('click', function () {
                    $('#file-input').click();
                });

                $('#file-input').on('change', function () {
                    const files = this.files;
                    const maxImages = 4;
                    let currentImages = $('#image-gallery img').length;

                    // بررسی تعداد تصاویر جدیدی که کاربر می‌تواند اضافه کند
                    const newImagesCount = Math.min(files.length, maxImages - currentImages);

                    if (newImagesCount === 0) {
                        alert('تعداد عکس‌ها حداکثر باید ۴ تا باشد.');
                        return;
                    }

                    // اضافه کردن تصاویر جدید به گالری
                    for (let i = 0; i < newImagesCount; i++) {
                        const file = files[i];
                        const reader = new FileReader();
                        reader.onload = (function (file) {
                            return function (e) {
                                // ایجاد عنصر جدید برای تصویر
                                const newImage = $('<img>', {
                                    class: 'gallery-image',
                                    src: e.target.result,
                                    style: 'width:70px;height:70px; border-radius:10px; margin: 5px;'
                                });
                                $('#image-gallery').append(newImage);

                                // نمایش تصویر بزرگ
                                $('#main-image').attr('src', e.target.result).show();
                            };
                        })(file);
                        reader.readAsDataURL(file);
                    }
                });

                // برای تغییر تصویر بزرگ هنگام کلیک بر روی تصاویر گالری
                $(document).on('click', '.gallery-image', function () {
                    const src = $(this).attr('src');
                    $('#main-image').attr('src', src);
                });
            });
        </script>
    </div>
</div>
