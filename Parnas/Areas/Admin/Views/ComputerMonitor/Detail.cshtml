@using Parnas.Domain.DTOs.ComputerMonitor
@model ComputerMonitorDetailDto
@{
    ViewData["Title"] = "جزئیات محصول";
}


<link rel="stylesheet" href="~/AdminAssets/assets/css/vendor/bootstrap-slider.min.css">
<link rel="stylesheet" href="~/AdminAssets/assets/css/vendor/owl.carousel.min.css">
<link rel="stylesheet" href="~/AdminAssets/assets/css/vendor/jquery.horizontalmenu.css">
<link rel="stylesheet" href="~/AdminAssets/assets/css/vendor/jquery-stack-menu.min.css">
<link rel="stylesheet" href="~/AdminAssets/assets/css/vendor/fancybox.min.css">
<link rel="stylesheet" href="~/AdminAssets/assets/css/vendor/nice-select.css">
<link rel="stylesheet" href="~/AdminAssets/assets/css/vendor/nouislider.min.css">
<link rel="stylesheet" href="~/AdminAssets/assets/plugin/go-to-top/style.css">
<link rel="stylesheet" href="~/AdminAssets/assets/plugin/iran-map/iranmap.css">
<!-- Main CSS File -->
<link rel="stylesheet" href="~/AdminAssets/assets/css/main.css">

<link rel="stylesheet" href="assets/css/vendor/font-awesome.min.css">
<!-- Bootstrap -->
<link rel="stylesheet" href="assets/css/vendor/bootstrap.min.css">
<!-- Plugins -->
<!-- Include Fancybox CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css" />

<!-- Include jQuery (اگر قبلاً اضافه نکرده‌اید) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Include Fancybox JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js"></script>

<h2>جزئیات محصول</h2>

<div class="dt-sn mb-5 dt-sl" style="padding-bottom: 20px;">
    <div class="row">
        <!-- Product Gallery-->
        <div class="col-lg-4 col-md-6 ps-relative">
            <!-- Product Options-->
            <div class=" position-relative pt-5 mb-3" style="margin-bottom:15px">
                <div class="promotion-badge not-available">
                    @((Model.Count <= 0) ? "ناموجود" : "موجود")
                </div>
            </div>
            <div class="product-gallery">
                <div class="product-carousel owl-carousel owl-rtl owl-loaded owl-drag" data-slider-id="1">
                    <div class="owl-stage-outer">
                        <div class="owl-stage">
                            <img style="width:350px; height:350px" src="~/images/uploads/@Model.ImageList[0]" alt="Product">
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center flex-wrap">
                    <ul class="product-thumbnails owl-thumbs ml-2" data-slider-id="1">
                        @foreach (var image in Model.ImageList)
                        {
                            <li class="owl-thumb-item active">
                                <a href="~/images/uploads/@image" data-fancybox="gallery1">
                                    <img src="~/images/uploads/@image" alt="Product">
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </div>
        <!-- Product Info -->
        <div class="col-lg-8 col-md-6 py-2">
            <div class="product-info dt-sl">
                <div class="product-title mb-3">
                    <h1>
                        @Model.Title
                    </h1>
                </div>
                <div class="product-params dt-sl active">
                    <ul data-title="ویژگی‌های محصول">
                        <li>
                            <span>برند: </span>
                            <span>@Model.Brand</span>
                        </li>
                        <li>
                            <span>رنگ: </span>
                            <span>@Model.Color</span>
                        </li>
                        <li>
                            <span>ابعاد: </span>
                            <span> @Model.Dimensions</span>
                        </li>
                        <li>
                            <span>تعداد: </span>
                            <span> @Model.Count </span>
                        </li>
                        <li>
                            <span>تاریخ افزودن محصول: </span>
                            <span> @Model.CreateDate </span>
                        </li>
                        <li>
                            <span>توضیحات: </span>
                            <span>
                                @Model.Description
                            </span>
                        </li>
                    </ul>
                </div>
                <div class="section-title text-sm-title title-wide no-after-title-wide mb-0 dt-sl">
                    <h2>قیمت : <span class="price">@Model.Price تومان</span> </h2>
                </div>
            </div>
        </div>
    </div>
</div>