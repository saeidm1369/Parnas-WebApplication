@model Parnas.Domain.DTOs.Gaming.GamingDetailDto
@{
    ViewData["Title"] = "ویرایش  محصول";
}

<h2 style="margin:10px 40px 15px 0">ویرایش سیستم گیمینگ</h2>

<div class="box box-warning container">
    <div class="row">
        <form asp-area="Admin" asp-controller="Gaming" asp-action="UpdateGaming" method="post" enctype="multipart/form-data">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-6">
                        <div class="box-header with-border">
                            <h3 class="box-title">اطلاعات کلی</h3>
                        </div>

                        <div class="box-body">
                            <!-- Base inputs -->
                            <div class="form-group">
                                <label asp-for="Title">عنوان</label>
                                <input asp-for="Title" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Brand">برند</label>
                                <input asp-for="Brand" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price">قیمت</label>
                                <input asp-for="Price" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Count">تعداد</label>
                                <input asp-for="Count" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Color">رنگ</label>
                                <input asp-for="Color" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Dimensions">اندازه</label>
                                <input asp-for="Dimensions" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Dimensions" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Weight">وزن</label>
                                <input asp-for="Weight" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Type">نوع</label>
                                <input asp-for="Type" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <!-- select -->
                            <div class="form-group">
                                <label asp-for="CategoryId" for="CategoryId">انتخاب دسته بندی</label>
                                <select asp-for="CategoryId" name="CategoryId" class="form-control">
                                    <option value="1"> لوازم جانبی</option>
                                    <option value="2">سیستم های آماده</option>
                                    <option value="3">قطعات کامپیوتر</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="box-header with-border">
                            <h3 class="box-title">مشخصات سیستم گیمینگ</h3>
                        </div>

                        <div class="box-body">
                            <!-- Gaming specific inputs -->
                            <div class="form-group">
                                <label asp-for="CPU">پردازنده</label>
                                <input asp-for="CPU" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="CPU" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="MotherBoard">مادربرد</label>
                                <input asp-for="MotherBoard" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="MotherBoard" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Graphic">کارت گرافیک</label>
                                <input asp-for="Graphic" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Graphic" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Ram">حافظه رم</label>
                                <input asp-for="Ram" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Ram" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Hdd">هارد دیسک</label>
                                <input asp-for="Hdd" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Hdd" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="DeepCool">خنک‌کننده</label>
                                <input asp-for="DeepCool" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="DeepCool" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Power">منبع تغذیه</label>
                                <input asp-for="Power" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Power" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Case">کیس</label>
                                <input asp-for="Case" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Case" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-5">
                <div class="container">
                    <div class="form-group">
                        <label asp-for="Description">توضیحات </label>
                        <textarea asp-for="Description" class="form-control" placeholder=""></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div style="margin-top: 15px">
                        <img id="main-image" src="" style="width:350px;height:350px; border-radius:10px; display: none;" />
                    </div>
                    <div class="container-fluid" style="margin-top: 15px" id="image-gallery"></div>
                </div>
                <div class="text-center" style="margin-top:15px">
                    <button type="button" class="btn btn-success" id="add-images-btn">افزودن تصاویر</button>
                    <input asp-for="ImageList" type="file" id="file-input" multiple accept="image/*" style="display: none;">
                    <input type="submit" class="btn btn-primary" value="ارسال">
                </div>
            </div>
        </form>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#add-images-btn').on('click', function () {
                    $('#file-input').click();
                });

                $('#file-input').on('change', function () {
                    const files = this.files;

                    // اضافه کردن تصاویر جدید به گالری
                    for (let i = 0; i < files.length; i++) {
                        const file = files[i];
                        const reader = new FileReader();
                        reader.onload = (function (file) {
                            return function (e) {
                                // ایجاد عنصر جدید برای تصویر
                                const newImage = $('<img>', {
                                    class: 'gallery-image',
                                    src: e.target.result,
                                    style: 'width:70px;height:70px; border-radius:10px; margin: 5px;',
                                    'data-index': $('#image-gallery img').length // تنظیم ایندکس
                                });
                                $('#image-gallery').append(newImage);
                            };
                        })(file);
                        reader.readAsDataURL(file);
                    }
                });

                // برای تغییر تصویر بزرگ هنگام کلیک بر روی تصاویر گالری
                $(document).on('click', '.gallery-image', function () {
                    const src = $(this).attr('src');
                    $('#main-image').attr('src', src).show();
                });
            });
        </script>
    </div>
</div>
