@model Parnas.Domain.DTOs.Cooling.CoolingAddDto
@{
    ViewData["Title"] = "افزودن سیستم خنک کننده";
}

<h2 style="margin:10px 40px 15px 0">افزودن سیستم خنک کننده</h2>

<div class="box box-warning container">
    <div class="row">
        <form asp-area="Admin" asp-controller="Cooling" asp-action="AddCooling" method="post" enctype="multipart/form-data">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-6">
                        <div class="box-header with-border">
                            <h3 class="box-title">اطلاعات کلی</h3>
                        </div>

                        <div class="box-body">
                            <!-- Base inputs -->
                            <div class="form-group">
                                <label asp-for="Title">عنوان</label>
                                <input asp-for="Title" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Brand">برند</label>
                                <input asp-for="Brand" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price">قیمت</label>
                                <input asp-for="Price" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Count">تعداد</label>
                                <textarea asp-for="Count" class="form-control" placeholder=""></textarea>
                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Color">رنگ</label>
                                <input asp-for="Color" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Dimensions">اندازه</label>
                                <input asp-for="Dimensions" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Dimensions" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Weight">وزن</label>
                                <input asp-for="Weight" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Type">نوع</label>
                                <input asp-for="Type" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CategoryId">دسته‌بندی</label>
                                <select asp-for="CategoryId" class="form-control">
                                    <option value="1">دسته‌بندی ۱</option>
                                    <option value="2">دسته‌بندی ۲</option>
                                    <option value="3">دسته‌بندی ۳</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="box-header with-border">
                            <h3 class="box-title">مشخصات سیستم خنک کننده</h3>
                        </div>

                        <div class="box-body">
                            <!-- Cooling specific inputs -->
                            <div class="form-group">
                                <label asp-for="IntelSocketSupport">پشتیبانی از سوکت اینتل</label>
                                <input asp-for="IntelSocketSupport" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="IntelSocketSupport" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="AMDSocketSupport">پشتیبانی از سوکت AMD</label>
                                <input asp-for="AMDSocketSupport" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="AMDSocketSupport" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TypeOfProccesorBlock">نوع بلوک پردازنده</label>
                                <input asp-for="TypeOfProccesorBlock" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="TypeOfProccesorBlock" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="BlockLighting">نورپردازی بلوک</label>
                                <input asp-for="BlockLighting" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="BlockLighting" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FanConnection">اتصال فن</label>
                                <input asp-for="FanConnection" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="FanConnection" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NumberOfCoolingFans">تعداد فن‌های خنک کننده</label>
                                <input asp-for="NumberOfCoolingFans" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="NumberOfCoolingFans" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TypeOfCoolingFan">نوع فن خنک کننده</label>
                                <input asp-for="TypeOfCoolingFan" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="TypeOfCoolingFan" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CoolingFanRotationSpeed">سرعت چرخش فن خنک کننده</label>
                                <input asp-for="CoolingFanRotationSpeed" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="CoolingFanRotationSpeed" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FanLighting">نورپردازی فن</label>
                                <input asp-for="FanLighting" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="FanLighting" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PumpRotationSpeed">سرعت چرخش پمپ</label>
                                <input asp-for="PumpRotationSpeed" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="PumpRotationSpeed" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="MaximumAirFlow">حداکثر جریان هوا</label>
                                <input asp-for="MaximumAirFlow" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="MaximumAirFlow" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="RadiatorMaterial">جنس رادیاتور</label>
                                <input asp-for="RadiatorMaterial" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="RadiatorMaterial" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="RadiatorDimensions">ابعاد رادیاتور</label>
                                <input asp-for="RadiatorDimensions" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="RadiatorDimensions" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CoolingPipeLenght">طول لوله خنک کننده</label>
                                <input asp-for="CoolingPipeLenght" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="CoolingPipeLenght" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <div class="container">
                    <div class="form-group">
                        <label asp-for="Description">توضیحات </label>
                        <textarea asp-for="Description" class="form-control" placeholder=""></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div style="margin-top: 15px">
                        <img id="main-image" src="" style="width:350px;height:350px; border-radius:10px; display: none;" />
                    </div>
                    <div class="container-fluid" style="margin-top: 15px" id="image-gallery"></div>
                </div>
                <div class="text-center" style="margin-top:15px">
                    <button type="button" class="btn btn-success" id="add-images-btn">افزودن تصاویر</button>
                    <input asp-for="Images" type="file" id="file-input" multiple accept="image/*" style="display: none;">
                    <input type="submit" class="btn btn-primary" value="ارسال">
                </div>
            </div>
        </form>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#add-images-btn').on('click', function () {
                    $('#file-input').click();
                });

                $('#file-input').on('change', function () {
                    const files = this.files;
                    const maxImages = 4;
                    let currentImages = $('#image-gallery img').length;

                    // بررسی تعداد تصاویر جدیدی که کاربر می‌تواند اضافه کند
                    const newImagesCount = Math.min(files.length, maxImages - currentImages);

                    if (newImagesCount === 0) {
                        alert('تعداد عکس‌ها حداکثر باید ۴ تا باشد.');
                        return;
                    }

                    // اضافه کردن تصاویر جدید به گالری
                    for (let i = 0; i < newImagesCount; i++) {
                        const file = files[i];
                        const reader = new FileReader();
                        reader.onload = (function (file) {
                            return function (e) {
                                // ایجاد عنصر جدید برای تصویر
                                const newImage = $('<img>', {
                                    class: 'gallery-image',
                                    src: e.target.result,
                                    style: 'width:70px;height:70px; border-radius:10px; margin: 5px;'
                                });
                                $('#image-gallery').append(newImage);

                                // نمایش تصویر بزرگ
                                $('#main-image').attr('src', e.target.result).show();
                            };
                        })(file);
                        reader.readAsDataURL(file);
                    }
                });

                // برای تغییر تصویر بزرگ هنگام کلیک بر روی تصاویر گالری
                $(document).on('click', '.gallery-image', function () {
                    const src = $(this).attr('src');
                    $('#main-image').attr('src', src);
                });
            });
        </script>
    </div>
</div>
