@model Parnas.Domain.DTOs.SSD.SSDAddDto
@{
    ViewData["Title"] = "افزودن SSD";
}

<h2 style="margin:10px 40px 15px 0">افزودن SSD</h2>

<div class="box box-warning container">
    <div class="row">
        <form asp-area="Admin" asp-controller="SSD" asp-action="AddSSD" method="post" enctype="multipart/form-data">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-6">
                        <div class="box-header with-border">
                            <h3 class="box-title">اطلاعات کلی</h3>
                        </div>

                        <div class="box-body">
                            <!-- Base Entity Inputs -->
                            <div class="form-group">
                                <label asp-for="Title">عنوان</label>
                                <input asp-for="Title" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Brand">برند</label>
                                <input asp-for="Brand" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price">قیمت</label>
                                <input asp-for="Price" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Color">رنگ</label>
                                <input asp-for="Color" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Dimensions">اندازه</label>
                                <input asp-for="Dimensions" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Dimensions" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Weight">وزن</label>
                                <input asp-for="Weight" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Type">نوع</label>
                                <input asp-for="Type" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Count">تعداد</label>
                                <input asp-for="Count" type="number" class="form-control" placeholder="">
                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CategoryId">دسته‌بندی</label>
                                <select asp-for="CategoryId" class="form-control">
                                    <option value="1">دسته‌بندی ۱</option>
                                    <option value="2">دسته‌بندی ۲</option>
                                    <option value="3">دسته‌بندی ۳</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="box-header with-border">
                            <h3 class="box-title">مشخصات SSD</h3>
                        </div>

                        <div class="box-body">
                            <!-- SSD Specific Inputs -->
                            <div class="form-group">
                                <label asp-for="SSDAppearance">ظاهر SSD</label>
                                <input asp-for="SSDAppearance" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="SSDAppearance" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Capacity">ظرفیت</label>
                                <input asp-for="Capacity" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="SSDInterface">رابط SSD</label>
                                <input asp-for="SSDInterface" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="SSDInterface" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="SSDMemoryTechnology">فناوری حافظه SSD</label>
                                <input asp-for="SSDMemoryTechnology" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="SSDMemoryTechnology" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="SSDPort">پورت SSD</label>
                                <input asp-for="SSDPort" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="SSDPort" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ReadingSpeed">سرعت خواندن</label>
                                <input asp-for="ReadingSpeed" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="ReadingSpeed" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="WritingSpeed">سرعت نوشتن</label>
                                <input asp-for="WritingSpeed" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="WritingSpeed" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Longevity">طول عمر</label>
                                <input asp-for="Longevity" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Longevity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-5">
                <div class="container">
                    <div class="form-group">
                        <label asp-for="Description">توضیحات </label>
                        <textarea asp-for="Description" class="form-control" placeholder=""></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div style="margin-top: 15px">
                        <img id="main-image" src="" style="width:350px;height:350px; border-radius:10px; display: none;" />
                    </div>
                    <div class="container-fluid" style="margin-top: 15px" id="image-gallery"></div>
                </div>
                <div class="text-center" style="margin-top:15px">
                    <button type="button" class="btn btn-success" id="add-images-btn">افزودن تصاویر</button>
                    <input asp-for="Images" type="file" id="file-input" multiple accept="image/*" style="display: none;">
                    <input type="submit" class="btn btn-primary" value="ارسال">
                </div>
            </div>
        </form>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#add-images-btn').on('click', function () {
                    $('#file-input').click();
                });

                $('#file-input').on('change', function () {
                    const files = this.files;
                    const maxImages = 4;
                    let currentImages = $('#image-gallery img').length;

                    // بررسی تعداد تصاویر جدیدی که کاربر می‌تواند اضافه کند
                    const newImagesCount = Math.min(files.length, maxImages - currentImages);

                    if (newImagesCount === 0) {
                        alert('تعداد عکس‌ها حداکثر باید ۴ تا باشد.');
                        return;
                    }

                    // اضافه کردن تصاویر جدید به گالری
                    for (let i = 0; i < newImagesCount; i++) {
                        const file = files[i];
                        const reader = new FileReader();
                        reader.onload = (function (file) {
                            return function (e) {
                                // ایجاد عنصر جدید برای تصویر
                                const newImage = $('<img>', {
                                    class: 'gallery-image',
                                    src: e.target.result,
                                    style: 'width:70px;height:70px; border-radius:10px; margin: 5px;'
                                });
                                $('#image-gallery').append(newImage);

                                // نمایش تصویر بزرگ
                                $('#main-image').attr('src', e.target.result).show();
                            };
                        })(file);
                        reader.readAsDataURL(file);
                    }
                });

                // برای تغییر تصویر بزرگ هنگام کلیک بر روی تصاویر گالری
                $(document).on('click', '.gallery-image', function () {
                    const src = $(this).attr('src');
                    $('#main-image').attr('src', src);
                });
            });
        </script>
    </div>
</div>
