                            </div>

                            <div class="form-group">
                                <label asp-for="Brand">برند</label>
                                <input asp-for="Brand" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price">قیمت</label>
                                <input asp-for="Price" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>                            

                            <div class="form-group">
                                <label asp-for="Color">رنگ</label>
                                <input asp-for="Color" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Dimensions">اندازه</label>
                                <input asp-for="Dimensions" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Dimensions" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Weight">وزن</label>
                                <input asp-for="Weight" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Type">نوع</label>
                                <input asp-for="Type" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Count">تعداد</label>
                                <input asp-for="Count" type="number" class="form-control" placeholder="">
                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>

                            <!-- select -->
                            <div class="form-group">
                                <label asp-for="CategoryId" for="CategoryId">انتخاب دسته بندی</label>
                                <select asp-for="CategoryId" name="CategoryId" class="form-control">
                                    <option value="1"> لوازم جانبی</option>
                                    <option value="2">سیستم های آماده</option>
                                    <option value="3">قطعات کامپیوتر</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="box-header with-border">
                            <h3 class="box-title">مشخصات مادربورد</h3>
                        </div>

                        <div class="box-body">
                            <!-- MotherBoard Specific Inputs -->
                            <div class="form-group">
                                <label asp-for="Platform">پلتفرم</label>
                                <input asp-for="Platform" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Platform" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Chipset">چیپست</label>
                                <input asp-for="Chipset" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Chipset" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="AppearanceOfTheMotherBoard">ظاهر مادربورد</label>
                                <input asp-for="AppearanceOfTheMotherBoard" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="AppearanceOfTheMotherBoard" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ProccesorSocket">سوکت پردازنده</label>
                                <input asp-for="ProccesorSocket" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="ProccesorSocket" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="SupportedProccesor">پردازنده‌های پشتیبانی‌شده</label>
                                <input asp-for="SupportedProccesor" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="SupportedProccesor" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="MotherBoardMemoryTechnology">فناوری حافظه مادربورد</label>
                                <input asp-for="MotherBoardMemoryTechnology" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="MotherBoardMemoryTechnology" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="MemorySlot">اسلات حافظه</label>
                                <input asp-for="MemorySlot" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="MemorySlot" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Configuration">پیکربندی</label>
                                <input asp-for="Configuration" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="Configuration" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="MaximumMemorySize">حداکثر حجم حافظه</label>
                                <input asp-for="MaximumMemorySize" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="MaximumMemorySize" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="XmpSupport">پشتیبانی از XMP</label>
                                <input asp-for="XmpSupport" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="XmpSupport" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="MainPowerConnector">کانکتور اصلی برق</label>
                                <input asp-for="MainPowerConnector" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="MainPowerConnector" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CPUPowerConnector">کانکتور برق پردازنده</label>
                                <input asp-for="CPUPowerConnector" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="CPUPowerConnector" class="text-danger"></span>
