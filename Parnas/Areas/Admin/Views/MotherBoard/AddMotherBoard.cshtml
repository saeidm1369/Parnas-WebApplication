                                <input asp-for="RaidSupport" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="RaidSupport" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="MotherBoardDisplayPortOutput">خروجی DisplayPort مادربورد</label>
                                <input asp-for="MotherBoardDisplayPortOutput" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="MotherBoardDisplayPortOutput" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="HdmiOutputOfTheMotherBoard">خروجی HDMI مادربورد</label>
                                <input asp-for="HdmiOutputOfTheMotherBoard" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="HdmiOutputOfTheMotherBoard" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="SoundChipset">چیپست صدا</label>
                                <select asp-for="SoundChipset" name="SoundChipset" class="form-control">
                                    <option value="True"> دارد</option>
                                    <option value="False">ندارد </option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="Bluetooth">بلوتوث</label>
                                <select asp-for="Bluetooth" name="Bluetooth" class="form-control">
                                    <option value="True"> دارد</option>
                                    <option value="False">ندارد </option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="BluetoothVersion">نسخه بلوتوث</label>
                                <input asp-for="BluetoothVersion" type="text" class="form-control" placeholder="">
                                <span asp-validation-for="BluetoothVersion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

               
            </div>
            <div class="col-md-5">
                <div class="container">
                    <div class="form-group">
                        <label asp-for="Description">توضیحات </label>
                        <textarea asp-for="Description" class="form-control" placeholder=""></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div style="margin-top: 15px">
                        <img id="main-image" src="" style="width:350px;height:350px; border-radius:10px; display: none;" />
                    </div>
                    <div class="container-fluid" style="margin-top: 15px" id="image-gallery"></div>
                </div>
                <div class="text-center" style="margin-top:15px">
                    <button type="button" class="btn btn-success" id="add-images-btn">افزودن تصاویر</button>
                    <input asp-for="Images" type="file" id="file-input" multiple accept="image/*" style="display: none;">
                    <input type="submit" class="btn btn-primary" value="ارسال">
                </div>
            </div>
        </form>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#add-images-btn').on('click', function () {
                    $('#file-input').click();
                });

                $('#file-input').on('change', function () {
                    const files = this.files;
                    const maxImages = 4;
                    let currentImages = $('#image-gallery img').length;

                    // بررسی تعداد تصاویر جدیدی که کاربر می‌تواند اضافه کند
                    const newImagesCount = Math.min(files.length, maxImages - currentImages);

                    if (newImagesCount === 0) {
                        alert('تعداد عکس‌ها حداکثر باید ۴ تا باشد.');
                        return;
                    }

                    // اضافه کردن تصاویر جدید به گالری
                    for (let i = 0; i < newImagesCount; i++) {
                        const file = files[i];
                        const reader = new FileReader();
                        reader.onload = (function (file) {
                            return function (e) {
                                // ایجاد عنصر جدید برای تصویر
                                const newImage = $('<img>', {
                                    class: 'gallery-image',
                                    src: e.target.result,
                                    style: 'width:70px;height:70px; border-radius:10px; margin: 5px;'
                                });
                                $('#image-gallery').append(newImage);

                                // نمایش تصویر بزرگ
                                $('#main-image').attr('src', e.target.result).show();
                            };
                        })(file);
                        reader.readAsDataURL(file);
                    }
                });

                // برای تغییر تصویر بزرگ هنگام کلیک بر روی تصاویر گالری
                $(document).on('click', '.gallery-image', function () {
                    const src = $(this).attr('src');
                    $('#main-image').attr('src', src);
                });
            });
        </script>
    </div>
</div>
