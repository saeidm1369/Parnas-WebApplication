@model Parnas.Domain.DTOs.MotherBoard.MotherBoardAddDto
@{
    ViewData["Title"] = "افزودن مادربورد";
}

<h2 style="margin:10px 40px 15px 0">افزودن مادربورد</h2>

<div class="box box-warning container">
    <div class="row">
        <form asp-area="Admin" asp-controller="MotherBoard" asp-action="AddMotherBoard" method="post" enctype="multipart/form-data">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-6">
                        <div class="box-header with-border">
